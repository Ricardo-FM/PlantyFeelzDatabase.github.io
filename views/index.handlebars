<link rel="stylesheet" href="/assets/css/plants.css">
<link rel="stylesheet" href="/assets/css/index.css">

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    {{> nav }}
    {{> login-modal }}
    <!-- Intro Header -->
<div class="all-plants-container container">
	
	<div class="row">
		{{#if plant }}
		{{#each plant}}
		<div class="plant-container col-xs-12 col-sm-6 col-lg-6">
			<div class="plant-subcontainer plant-default">
				<h3 class="lead">
					Plant: {{ this.dataValues.name }}
				</h3>
				<div class="bottom-plant-container">
					<div class="destination-container">
						<p class="destination">
							{{ this.dataValues.destination }}
						</p>
					</div>
					<button type="button" class="btn btn-circle"><i class="">10</i></button>
				</div>
			</div>
		</div>
		{{/each}}
		{{/if}}
	<button id="add-plant-button" data-toggle="modal" data-target="#squarespaceModal" type="button" class="btn btn-circle"><i class="glyphicon glyphicon-plus"></i></button>
	</div>
</div>
</body>


    <!-- Map Section -->
    <div id="map"></div>

    <!-- Footer -->
    <footer>
        <section id="contact" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <ul class="list-inline banner-social-buttons">
                    <li>
                        <a class="page-scroll" class="btn btn-default btn-lg" data-toggle="modal" data-target="#login-modal"><i class= "fa fa-user fa-fw"></i> <span class="network-name"></span>Webmaster Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
        <div class="container text-center">
            <p>Copyright &copy; Your Website 2016</p>
        </div>
    </footer>